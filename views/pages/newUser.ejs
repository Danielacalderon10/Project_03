<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"  type= "text/css" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">

    <title><%= title %></title>
  </head>


  <%- include('../partials/header.ejs') %>

  <body>
    <main>
      <div class="part1"><h1>New user </h1>

      
     <img class="main_logo" src='../Assets/logo_mrcoffee.png' > 

    </main>

 <!--contact form -->
 <form id="contact-form" action="/users" method="POST">

    <!-- NAME -->
    <div>
        <label for="firstname">First name: *</label><br>
        <input
          type="text"
          name="firstname"
          id="firstname"
          class="input"
          required
        /><br><br>
      </div>
      <!-- LAST NAME -->
      <div>
        <label for="lastname">Last name: *</label><br>
        <input
          type="text"
          name="lastname"
          id="lastname"
          class="input"
          required
        /><br><br>
      </div>
      <!-- email -->
      <div>
          <label for="email">Email: *</label><br>
          <input
            type="text"
            name="email"
            id="email"
            class="input"
            required
          /><br><br>
        </div>
        <!-- Password -->
      <div>
          <label for="password">Password: *</label><br>
          <input
            type="text"
            name="password"
            id="password"
            class="input"
            required
          /><br><br>
        </div>
      
    
      <!--  Submit -->
           <div class="hidden submit-container">
            <input
              type="submit"
              name="submit"
              id="submit"
              class="submit"
              value="Send message"
            />
          </div>
    
           
          
        </form>
  
  

    <%- include('../partials/footer') %>

  </body>
</html>